/**index.wxss**/
.home {
  background-color: #999;
}

.home>.home_block {
  padding: 30rpx 15rpx 20rpx 15rpx;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
}

.home>.home_block>.home_block_view {
  width: 47%;
}

.home>.home_hot {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.home>.home_hot>.home_hot_top {
  display: flex;
  justify-content: space-between;
}

.home>.home_hot>.home_hot_top>.home_hot_top_left {
  font-size: 32rpx;
  font-weight: bolder;
}

.home>.home_hot>.home_hot_top>.home_hot_top_right {
  font-size: 24rpx;
  color: #999;
}

.home>.home_hot>.home_hot_imgageList {
  display: flex;
  overflow: auto;
  margin-top: 16rpx;
}

.home>.home_hot>.home_hot_imgageList>.home_hot_imgage {
  display: block;
  width: 24%;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
  position: relative;
}

.home>.home_hot>.home_hot_imgageList>.home_hot_imgage>image {
  display: block;
  width: 100%;
  height: 160rpx;
  border-radius: 10rpx;
}

.home>.home_hot>.home_hot_imgageList>.home_hot_imgage>.home_hot_imgage_span {
  color: #fff;
  position: absolute;
  bottom: 10rpx;
  z-index: 10000;
  left: 50%;
  transform: translate(-50%, 0);
  font-size: 14rpx;
}

.home>.home_parting {
  background-color: #ccc;
  height: 3rpx;
  margin-top: 5rpx;
}

.home>.home_week {
  margin-top: 2rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.home>.home_week>.home_week_title {
  font-size: 36rpx;
  margin-top: 5rpx;
  font-weight: bolder;
  display: flex;
  justify-content: center;
}

.home>.home_week>.home_week_list {
  width: 100%;
}