/**index.wxss**/
.home {}

.home>.home_block {
  padding: 15px;
  display: flex;
  justify-content: space-around;
}

.home>.home_block>.home_block_view {
  width: 47%;
}

.home>.home_hot {
  padding: 10px 15px;
}

.home>.home_hot>.home_hot_top {
  display: flex;
  justify-content: space-between;
}

.home>.home_hot>.home_hot_top>.home_hot_top_left {
  font-size: 16px;
  font-weight: bolder;
}

.home>.home_hot>.home_hot_top>.home_hot_top_right {
  font-size: 12px;
  color: #999;
}

.home>.home_hot>.home_hot_imgageList {
  display: flex;
  overflow: auto;
  margin-top: 8px;
}

.home>.home_hot>.home_hot_imgageList>.home_hot_imgage {
  display: block;
  width: 25%;
  height: 80px;
  flex-shrink: 0;
  margin-right: 5px;
  position: relative;
}

.home>.home_hot>.home_hot_imgageList>.home_hot_imgage>image {
  display: block;
  width: 100%;
  height: 80px;
  border-radius: 5px;
}

.home>.home_hot>.home_hot_imgageList>.home_hot_imgage>.home_hot_imgage_span {
  color: #fff;
  position: absolute;
  bottom: 10px;
  z-index: 10000;
  left: 50%;
  transform: translate(-50%, 0);
  font-size: 14px;
}

.home>.home_parting {
  background-color: #ccc;
  height: 3px;
  margin-top: 5px;
}

.home>.home_week {
  padding: 15px;
}

.home>.home_week>.home_week_title {
  font-size: 14px;
  margin-top: 5px;
  font-weight: bolder;
  display: flex;
  justify-content: center;
}